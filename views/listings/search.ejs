<% layout("/layouts/boilerplate") %>
<body>

    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
            font-size: 0.9rem;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .tax-toggle {
            width: fit-content;
            margin: auto;
            padding: 1rem;
            margin-right: 1rem;
            border: solid black 1px;
            height: 3.25rem;
            border-radius: 1rem;
            display: flex;
            align-items: center;
        }
        @media (max-width: 1200px) {
            .filter {
                margin-right: 1rem;
                margin-top: 1rem;
            }
        }
        
        @media (max-width: 600px) {
            #filters {
                flex-wrap: nowrap;
                overflow-x: auto;
                padding: 0 1rem;
            }
            .filter {
                flex: 0 0 45%;
                max-width: 45%;
            }
            .tax-toggle {
                display: none;
            }
        }
        .tax{
            visibility: hidden;
        }
        .filter a{
            text-decoration: none;
            color: rgb(31, 30, 30);
        }
        .filter a:hover{
            color: #fe424d;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=trending"><div><i class="fa-solid fa-fire"></i></div><p>Trending</p></a>
            
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=room"><div><i class="fa-solid fa-bed"></i></div>
                <p>Room</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=iconic cities"><div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconi cities</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=Mountains"><div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=Castles"><div><i class="fa-brands fa-fort-awesome"></i></i></div>
                <p>Castles</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=Amazing pools"><div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=farms"><div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=Arctic"><div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p></a>
        </div>
        <div class="filter">
            <a href="http://localhost:8080/listing/search?query=Camping"><div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p></a>
        </div>

        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let listing of listings){%>
        <a href="/listing/<%=listing._id%>" class="listing-link ">
    <div class="card col listing-card  " >
        <img src="<%=listing.image%>" class="card-img-top mt-3" alt="listing-image" style="height: 20rem";>
        <div class="card-img-overlay"></div>
        <div class="card-body">
            <p class="card-text">
                <b><%=listing.title%></b> <br>
                <%=listing.location%> <br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%> <i class="tax"> +18% GST</i>
            </p>
        </div>
    </div>
</a>
    <%}%>
</div>

<script>


    let classtax=document.querySelectorAll(".tax")
    let taxSwitch=document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        classtax.forEach((taxElement) => {
            taxElement.classList.toggle("visible");
        })
    })
</script>
</body>

