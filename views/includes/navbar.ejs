<style>
  .btn-search{
    background-color: #fe424d;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search i{
    margin-right: 10px;
  }
  .btn-search:hover{
    background-color: #fe424d;
    color: white
  }
  .margin{
    margin-left: 185px;
  }
  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem .5rem 3rem;
    font-size: 1rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listing"><i class="fa-solid fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/listing">Explore</a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link" href="/listing/new">Add new listing</a>
          </li>
          <div class="navbar-nav margin">
            <form class="d-flex" role="search" method="get" action="/listing/search">
              <input class="form-control me-2 search-input" type="text" placeholder="Search Destinations" aria-label="Search" name="query">
              <button class="btn btn-search " type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
            </form>
          </div>
        </ul>
      </div>

      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle user-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          User
        </button>
        <ul class="dropdown-menu dropdown-menu-dark">
          <% if(!currUser){%>
          <li><a class="dropdown-item active" href="/signup">Sign Up</a></li>
          <li><a class="dropdown-item" href="/login">Log In</a></li>
          <%}%>
          <% if(currUser){%>
            <a class="dropdown-item" href="/logout">Log out</a>
        </ul>
        <%}%>
      </div>
    </div>
  </nav>